
<div class="container">
  <h1> The cocktail <%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
    <ul class = "list-unstyled">
      <li> The cocktail need <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to "Delete a dose", dose_path(dose), method: :delete %>
      </li>
    </ul>

  <% end %>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Back", cocktails_path %>
</div>
